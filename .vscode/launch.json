    "version": "0.2.0",
    "configurations": [
        {
            "name": "Master",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "start.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0",

                "EXTERNAL_PORT": "8080",
                "INTERNAL_PORT": "8080",
                "DEVICE_PORT": "5000",
                "SUBNET_MASK": "255.255.255.0",
                "NETWORK_ADDRESS": "192.168.178.0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--port", "8080"
            ],
            "jinja": true
        }
    ]
}